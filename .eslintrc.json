{
    "extends": ["airbnb-typescript"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "no-plusplus": "off",
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "max-classes-per-file": "off",
        "react/prefer-stateless-function": "off"
    }
}

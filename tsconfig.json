{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
